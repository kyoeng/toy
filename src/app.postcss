@tailwind base;
@tailwind components;
@tailwind utilities;
@tailwind variants;


.font-cache {
    width: 0;
    height: 0;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    font-size: 1px;
}


:root [data-theme="skeleton"] {
    --theme-font-family-base: "Noto Sans KR Regular", sans-serif;
}


html, body {
    position: relative;
    width: 100%;
    height: 100%;
}


#container {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto
}